{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "declaration": true,
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "importHelpers": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "includes": [
        "src/*.ts",
        "src/*/*.js"
    ]
}
