{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "lib": [
            "es2015",
            "es2016.array.include",
            "dom"
        ]
    },
    "includes": [
        "src/*.ts"
    ],
    "exclude": [
        "examples/*",
        "./node_modules/*"
    ]
}